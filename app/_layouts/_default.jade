!!! 5
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
      block title
    meta(name='viewport', content='width=device-width')
    link(rel='shortcut icon', type="image/x-icon", href='/favicon.ico')
    link(rel='stylesheet', href='styles/app.css')
    //- Generated by the grunticon grunt task.
    include /assets/images/icons/grunticon.loader.txt

  body

    #navbar
      .container
        a.icon-brunch-logo-web(href="/")
        
        ul.nav.nav--main-nav
          li
          each item in nav
            li: a.nav__item--main-nav(href='/'+item.path+(item.path?'.html':''))= item.title


    block hero

    .page__content.container
      .grid
        .grid__item.one-whole.desk-two-thirds
          block content
        .grid__item.one-whole.desk-one-third
          .social-buttons
            each service in social
              div: iframe(class="social-button-#{service.classname}", allowtransparency="true", frameborder="0", scrolling="no", src=service.src, style="width: #{service.width}; height:30px;")
          block sidebar

    script(src='scripts/app.js')
    script.
      require('scripts/app');

    include /_includes/track.html